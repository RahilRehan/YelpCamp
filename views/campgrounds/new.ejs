<% include ../partials/header %>

<div class="block need-margin">
    <form action="/campgrounds" method="POST" class="lrf">

        <div class="field">
            <label class="label">Name of the Campgrounds: </label>
            <div class="control">
                <input class="input" type="text" placeholder="e.g Silicon Rest" name="name">
            </div>
        </div>
    
        <div class="field">
            <label class="label">Image Link: </label>
            <div class="control">
                <input class="input" type="text" name="link" placeholder="link">
            </div>
        </div>
    
        <textarea class="textarea" name="description" placeholder="10 lines of textarea" rows="10"></textarea>
        <br>
        <input type="submit" class="button is-info">
    </form>
</div>


<% include ../partials/footer %>